// Prisma Schema for Digital Astrology Platform
// Database: PostgreSQL
// Prisma v7 Compatible Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// AUTHENTICATION & USER MANAGEMENT
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  phone         String?   @unique
  name          String
  image         String?
  locale        String    @default("en")
  role          UserRole  @default(USER)
  emailVerified DateTime?
  phoneVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Birth Details (Mandatory for onboarding)
  birthDate        DateTime?
  birthTime        String?      // HH:MM format (24-hour)
  birthPlace       String?
  birthLatitude    Float?
  birthLongitude   Float?
  birthTimezone    String?      // e.g., "5.5" for IST, "-5" for EST
  birthDetailsJson Json?         // Complete raw birth chart data

  // Computed Astrological Data (calculated from birth details)
  sunSign          String?       // e.g., "Aries", "Taurus" (from Sun planet position)
  moonSign         String?       // e.g., "Cancer", "Leo" (from Moon planet position)
  risingSign       String?       // e.g., "Scorpio" (Ascendant/Lagna)
  risingDegree     Float?        // Ascendant degree for precise calculations

  // Preferences
  preferredSystem  AstrologySystem @default(VEDIC)
  onboardingCompleted Boolean @default(false)

  // Relations
  accounts      Account[]
  sessions      Session[]
  kundlis       Kundli[]
  consultations Consultation[]
  orders        Order[]
  favorites     Favorite[]

  @@index([phone])
  @@index([email])
  @@index([role])
  @@index([onboardingCompleted])
  @@map("users")
}

enum UserRole {
  USER
  ASTROLOGER
  ADMIN
}

enum AstrologySystem {
  VEDIC
  WESTERN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// ASTROLOGY CORE
// ============================================================================

model Kundli {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Birth Details
  name       String
  birthDate  DateTime
  birthTime  String   // HH:MM format
  birthPlace String
  latitude   Float
  longitude  Float
  timezone   String

  // Chart Data (stored as JSON)
  chartData  Json

  // Metadata
  isPublic   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
  @@map("kundlis")
}

model Astrologer {
  id              String   @id @default(cuid())
  userId          String?  @unique
  name            String
  specialization  String[]
  languages       String[]
  experience      Int      // years
  rating          Float    @default(0)
  totalReviews    Int      @default(0)
  hourlyRate      Int      // in rupees
  imageUrl        String
  bio             String   @db.Text
  verified        Boolean  @default(false)
  available       Boolean  @default(true)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  consultations   Consultation[]
  availability    AstrologerAvailability[]

  @@index([available])
  @@index([rating])
  @@map("astrologers")
}

model AstrologerAvailability {
  id           String     @id @default(cuid())
  astrologerId String
  astrologer   Astrologer @relation(fields: [astrologerId], references: [id], onDelete: Cascade)

  dayOfWeek    Int        // 0 = Sunday, 6 = Saturday
  startTime    String     // HH:MM format
  endTime      String     // HH:MM format
  isActive     Boolean    @default(true)

  @@index([astrologerId])
  @@map("astrologer_availability")
}

model Consultation {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id])
  astrologerId  String
  astrologer    Astrologer @relation(fields: [astrologerId], references: [id])

  scheduledAt   DateTime
  duration      Int        // minutes
  status        ConsultationStatus @default(SCHEDULED)
  meetingUrl    String?
  notes         String?    @db.Text

  // Payment
  amount        Int
  paymentStatus PaymentStatus @default(PENDING)
  paymentId     String?

  // Review
  rating        Int?
  review        String?    @db.Text

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([userId])
  @@index([astrologerId])
  @@index([scheduledAt])
  @@index([status])
  @@map("consultations")
}

enum ConsultationStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

// ============================================================================
// E-COMMERCE
// ============================================================================

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String   @db.Text
  price       Int      // in rupees
  category    String
  imageUrl    String
  images      String[] // Additional images
  inStock     Boolean  @default(true)
  stockCount  Int      @default(0)
  featured    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  orderItems  OrderItem[]
  favorites   Favorite[]

  @@index([category])
  @@index([featured])
  @@index([slug])
  @@map("products")
}

model Order {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])

  status        OrderStatus @default(PENDING)
  totalAmount   Int         // in rupees

  // Shipping
  shippingAddress Json
  trackingNumber  String?

  // Payment
  paymentMethod   String?
  paymentId       String?
  paymentStatus   PaymentStatus @default(PENDING)

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  items         OrderItem[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("orders")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])

  quantity  Int
  price     Int     // Price at time of order

  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
  @@map("favorites")
}
